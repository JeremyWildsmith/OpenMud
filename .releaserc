{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md",
          "Directory.Build.props"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@droidsolutions-oss/semantic-release-update-file",
      {
        "files": [
          {
            "path": [
              "OpenMud.Mudpiler.Compiler.Project.Cli/OpenMud.Mudpiler.Compiler.Project.Cli.csproj"
            ],
            "type": "xml",
            "replacements": [
              {
                "key": "Version",
                "value": "${nextRelease.version}"
              }
            ]
          }
        ]
      }
    ],
    [
      "@semantic-release/exec", {
        "publishCmd": "dotnet build --no-restore --configuration Release"
      }
    ],
    [
      "@semantic-release/exec", {
        "publishCmd": "dotnet pack .\\OpenMud.Mudpiler.Compiler.Project.Cli\\OpenMud.Mudpiler.Compiler.Project.Cli.csproj -c Release -o out"
      }
    ],
    [
      "@semantic-release/exec", {
        "publishCmd": "dotnet nuget push -s https://api.nuget.org/v3/index.json -k  ${{ secrets.NUGET_TOKEN }} .\\out\\*.nupkg"
      }
    ]
  ],
  "pkgRoot": "./openmud"
}